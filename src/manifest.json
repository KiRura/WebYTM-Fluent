{
	"manifest_version": 3,
	"name": "WebYTM-Fluent",
	"version": "0.9",
	"description": "Web版YouTube Musicのデザイン変更, lrclibからの歌詞取得, 位置同期",
	"permissions": ["scripting", "storage", "tabs"],
	"host_permissions": [
		"https://music.youtube.com/*",
		"https://lrclib.net/api/*"
	],
	"content_scripts": [
		{
			"matches": ["https://music.youtube.com/*"],
			"js": ["/script/index.js"],
			"css": ["/css/common.css"],
			"run_at": "document_idle"
		}
	]
}
